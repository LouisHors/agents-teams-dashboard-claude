#!/bin/bash

# Agent Teams Monitor - 智能启动脚本
# 可在任意项目目录中使用

set -e

# 检测项目根目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# 尝试找到 monitor 项目
find_monitor_project() {
    # 1. 检查当前目录是否有 agent-teams-monitor
    if [ -d "./agent-teams-monitor" ]; then
        echo "$(pwd)/agent-teams-monitor"
        return 0
    fi

    # 2. 检查脚本所在目录
    if [ -d "${SCRIPT_DIR}/agent-teams-monitor" ]; then
        echo "${SCRIPT_DIR}/agent-teams-monitor"
        return 0
    fi

    # 3. 检查默认位置
    DEFAULT_PATH="${HOME}/CodeForPerson/agent-teams-dashboard/agent-teams-monitor"
    if [ -d "$DEFAULT_PATH" ]; then
        echo "$DEFAULT_PATH"
        return 0
    fi

    # 4. 未找到
    return 1
}

# 颜色输出
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# 查找项目
MONITOR_PROJECT=$(find_monitor_project) || {
    echo -e "${RED}Error: Cannot find agent-teams-monitor project${NC}"
    echo ""
    echo "Searched locations:"
    echo "  - ./agent-teams-monitor (current directory)"
    echo "  - ${SCRIPT_DIR}/agent-teams-monitor"
    echo "  - ${HOME}/CodeForPerson/agent-teams-dashboard/agent-teams-monitor"
    echo ""
    echo "To use team-monitor:"
    echo "  1. Copy agent-teams-monitor to your project, or"
    echo "  2. Run from the agent-teams-dashboard directory"
    exit 1
}

SERVER_DIR="${MONITOR_PROJECT}/server"
CLIENT_DIR="${MONITOR_PROJECT}/client"
BACKEND_LOG="/tmp/team-monitor-backend.log"
FRONTEND_LOG="/tmp/team-monitor-frontend.log"

# 显示检测到的路径
echo -e "${BLUE}Using monitor project:${NC} ${MONITOR_PROJECT}"
echo ""

start_backend() {
    if lsof -ti:3001 >/dev/null 2>&1; then
        echo -e "${GREEN}✓${NC} Backend already running on http://localhost:3001"
        return 0
    fi

    echo "Starting backend..."
    cd "$SERVER_DIR" || exit 1

    # 检查依赖
    if [ ! -d "node_modules" ]; then
        echo "  Installing dependencies..."
        npm install > /dev/null 2>&1
    fi

    nohup npm run dev > "$BACKEND_LOG" 2>&1 &
    sleep 3

    if lsof -ti:3001 >/dev/null 2>&1; then
        echo -e "${GREEN}✓${NC} Backend started on http://localhost:3001"
        return 0
    else
        echo -e "${RED}✗${NC} Backend failed to start"
        echo "Check logs: $BACKEND_LOG"
        return 1
    fi
}

start_frontend() {
    if lsof -ti:5173 >/dev/null 2>&1; then
        echo -e "${GREEN}✓${NC} Frontend already running on http://localhost:5173"
        return 0
    fi

    echo "Starting frontend..."
    cd "$CLIENT_DIR" || exit 1

    # 检查依赖
    if [ ! -d "node_modules" ]; then
        echo "  Installing dependencies..."
        npm install > /dev/null 2>&1
    fi

    nohup npm run dev > "$FRONTEND_LOG" 2>&1 &
    sleep 3

    if lsof -ti:5173 >/dev/null 2>&1; then
        echo -e "${GREEN}✓${NC} Frontend started on http://localhost:5173"
        return 0
    else
        echo -e "${RED}✗${NC} Frontend failed to start"
        echo "Check logs: $FRONTEND_LOG"
        return 1
    fi
}

stop_services() {
    echo "Stopping services..."

    if lsof -ti:3001 >/dev/null 2>&1; then
        kill $(lsof -ti:3001) 2>/dev/null
        echo -e "${GREEN}✓${NC} Backend stopped"
    else
        echo -e "${YELLOW}!${NC} Backend not running"
    fi

    if lsof -ti:5173 >/dev/null 2>&1; then
        kill $(lsof -ti:5173) 2>/dev/null
        echo -e "${GREEN}✓${NC} Frontend stopped"
    else
        echo -e "${YELLOW}!${NC} Frontend not running"
    fi
}

show_status() {
    echo "=== Team Monitor Status ==="
    echo ""
    echo -e "${BLUE}Project:${NC} ${MONITOR_PROJECT}"
    echo ""

    if lsof -ti:3001 >/dev/null 2>&1; then
        echo -e "${GREEN}●${NC} Backend:  running on http://localhost:3001"
    else
        echo -e "${RED}●${NC} Backend:  stopped"
    fi

    if lsof -ti:5173 >/dev/null 2>&1; then
        echo -e "${GREEN}●${NC} Frontend: running on http://localhost:5173"
    else
        echo -e "${RED}●${NC} Frontend: stopped"
    fi

    echo ""
    echo "Logs:"
    echo "  Backend:  $BACKEND_LOG"
    echo "  Frontend: $FRONTEND_LOG"
}

show_logs() {
    echo "=== Backend Logs (last 20 lines) ==="
    if [ -f "$BACKEND_LOG" ]; then
        tail -20 "$BACKEND_LOG"
    else
        echo "No backend logs found"
    fi

    echo ""
    echo "=== Frontend Logs (last 20 lines) ==="
    if [ -f "$FRONTEND_LOG" ]; then
        tail -20 "$FRONTEND_LOG"
    else
        echo "No frontend logs found"
    fi
}

start_all() {
    echo -e "${BLUE}=== Starting Agent Teams Monitor ===${NC}"
    echo ""

    start_backend
    start_frontend

    echo ""
    echo "==================================="
    echo -e "${GREEN}✓${NC} Team Monitor is ready!"
    echo "  Dashboard: http://localhost:5173"
    echo "  API:       http://localhost:3001"
    echo "==================================="

    # 尝试自动打开浏览器
    if command -v open >/dev/null 2>&1; then
        sleep 1
        open "http://localhost:5173"
        echo ""
        echo "Browser opened automatically"
    elif command -v xdg-open >/dev/null 2>&1; then
        sleep 1
        xdg-open "http://localhost:5173" &
        echo ""
        echo "Browser opened automatically"
    fi
}

# 主命令处理
case "${1:-start}" in
    start)
        start_all
        ;;
    stop)
        stop_services
        ;;
    restart)
        stop_services
        sleep 2
        start_all
        ;;
    status)
        show_status
        ;;
    logs)
        show_logs
        ;;
    *)
        echo "Agent Teams Monitor - Real-time dashboard for agent teams"
        echo ""
        echo "Usage: team-monitor [command]"
        echo ""
        echo "Commands:"
        echo "  start    Start backend and frontend (default)"
        echo "  stop     Stop all services"
        echo "  restart  Restart all services"
        echo "  status   Check service status"
        echo "  logs     Show recent logs"
        echo ""
        echo "Examples:"
        echo "  team-monitor           # Start services"
        echo "  team-monitor status    # Check status"
        echo "  team-monitor stop      # Stop services"
        exit 1
        ;;
esac
